<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_margin_top"
    android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_layout"
                android:labelFor="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fui_field_padding_vert"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email"
                    android:hint="@string/hint_correo"
                    style="@style/FirebaseUI.TextInputEditText.EmailField" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_layout"
                style="@style/FirebaseUI.TextInputLayout.PasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fui_field_padding_vert"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:hint="@string/hint_password"
                    style="@style/FirebaseUI.TextInputEditText.PasswordField" />

            </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_createUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textButtonColor"
            android:background="@drawable/button_rounded_corner"
            android:text="@string/registro" />

        <Button
            android:id="@+id/button_SignInUser"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textButtonColor"
            android:background="@drawable/button_rounded_corner"
            android:text="@string/acceso"/>

        <Button
            android:id="@+id/button_atras"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textColor="@color/textButtonColor"
            android:background="@drawable/button_rounded_corner"
            android:text="@string/atras" />
    </LinearLayout>

</LinearLayout>